<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('_bootstrap_meta')%>
		<title>Create Student Form</title>
	</head>

	<body style="background-image: url('https://wallpapers.com/images/hd/4k-sharp-colorful-clouds-364l86a13wi6hkqg.jpg');">
		<%- include('_header') %>
		<form
			class="w-50 mx-auto mt-4"
			action="/students/createStudent"
			method="post"
			style="
				height: 100%;
				display: grid;
				place-content: center;
				background: rgba(255, 255, 255,0.5);
				border-radius: 5px;
				box-shadow: 7px 7px 12px rgba(0, 0, 0, 0.05);
				padding: 50px 70px;
			"
		>
			<h3 style="text-align: center">Add User</h3>
			<fieldset>
				<div class="mb-3">
					<label for="name" class="form-label">Name</label>
					<input type="text" class="form-control" id="name" name="name" />
				</div>
				<div class="mb-3">
					<label for="email" class="form-label">Email address</label>
					<input type="email" class="form-control" id="email" placeholder="abc@gmail.com" name="email" />
				</div>
				<div class="mb-3">
					<label for="contactNumber" class="form-label">Mobile Number</label>
					<input type="text" class="form-control" id="contactNumber" name="contactNumber" />
				</div>
				<div class="mb-3">
					<label for="placement" class="form-label">Select Database</label>
					<select class="form-select" aria-label="Default select example" name="placement" id="placement">
						<option>--Select--</option>
						<option value="Placed">Database 1</option>
						<option value="Not Placed">Database 2</option>
						<option value="Pending">Database 3</option>
					</select>
				</div>
			</fieldset>
			<button type="submit" class="btn btn-success align-self-center">Create User</button>
		</form>
		<%- include('_bootstrap_script')%>
	</body>
</html>
